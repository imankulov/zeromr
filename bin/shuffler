#!/usr/bin/env python
# -*- coding: utf-8 -*-
import time
import argparse
from zeromr.shuffler import Shuffler


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('--delay', type=int, default=2)
    parser.add_argument('--my-socket', default='tcp://*:5556')
    args = parser.parse_args()

    node = Shuffler(my_socket=args.my_socket)
    print('Starting shuffler with delay of {} sec'.format(args.delay))
    time.sleep(args.delay)
    node.start()


if __name__ == '__main__':
    main()
