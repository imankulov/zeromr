#!/usr/bin/env python
# -*- coding: utf-8 -*-
from zeromr.worker import Worker
from zeromr.binutils import get_argument_parser, setup_logger


def main():
    parser = get_argument_parser()
    parser.add_argument('--sender-socket', default='tcp://*:5555')
    args = parser.parse_args()
    setup_logger(args)
    node = Worker(sender_socket=args.sender_socket)
    print('Starting worker node: {0}'.format(node.name))
    node.start()


if __name__ == '__main__':
    main()
